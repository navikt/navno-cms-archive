{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": ["es2023"],
        "moduleResolution": "bundler",
        "module": "esnext",
        "target": "es2022",
        "baseUrl": "src",
        "jsx": "react",
        "noEmit": true,
        "paths": {
            "@common/server/*": ["../../../common/src/server/*"],
            "@common/shared/*": ["../../../common/src/shared/*"]
        }
    },
    "include": ["src/**/*.ts"]
}
